<li><%= link_to fa_icon('fw folder-open', text: t('.open')), items_path(folder: folder.id) %></li>
<li><%= link_to fa_icon('fw cloud-download', text: t('.download')), download_folder_path(folder, format: :js), data: {remote: true} %></li>
<% if can? :share, folder %>
<li><%= link_to fa_icon('fw link', text: t('.share')), share_folder_path(folder), remote: true %></li>
<li><%= link_to fa_icon('fw envelope', text: t('.transfer')), transfer_folder_path(folder, format: :js), remote: true %></li>
<% end %>
<% if can? :update, folder  %>
<li><%= link_to fa_icon('fw edit', text: t('.rename')), rename_folder_path(folder), data: {remote: true} %></li>
<li><%= link_to fa_icon('fw level-up', text: t('.move')), move_folder_path(folder), data: {remote: true} %></li>
<% end %>
<!-- # <li><%= link_to fa_icon('fw tag', text: t('.tag')) %></li> -->
<% if can? :destroy, folder  %>
<li><%= link_to fa_icon('fw trash-o', text: t('.remove')), folder_path(folder), data: {remote: true,  method: :delete, confirm: t(".sure", name: folder.name) } %></li>
<% end %>
