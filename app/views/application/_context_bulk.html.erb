<% if @folders.empty? and @can_update %>
  <li><%= link_to fa_icon('tag', text: t('.tag')), bulk_tags_items_path(selection: selection, format: :js), data: {remote: true} %></li>
<% end %>
<% if @can_destroy %>
<li><%= link_to fa_icon('trash-o', text: t('.remove')) , bulk_items_path(selection: selection), data: {method: :delete, remote: true, confirm: t('.sure') } %></li>
<% end %>
