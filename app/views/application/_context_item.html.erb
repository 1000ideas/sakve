<li><%= link_to fa_icon('fw picture-o', text: t('.show')), item_path(item, format: :js), data: { remote: true } %></li>
<li><%= link_to fa_icon('fw cloud-download', text: t('.download')), download_item_path(item, name: item.name) %></li>
<% if can? :share, item %>
<li><%= link_to fa_icon('fw link', text: t('.share')), share_item_path(item, format: :js), data: {remote: true} %></li>
<li><%= link_to fa_icon('fw envelope', text: t('.transfer')), transfer_item_path(item, format: :js), data: {remote: true} %></li>
<% end %>
<% if can? :update, item %>
<li><%= link_to fa_icon('fw edit', text: t('.rename')), rename_item_path(item, format: :js), data: {remote: true} %></li>
<li><%= link_to fa_icon('fw level-up', text: t('.move')), move_item_path(item, format: :js), data: {remote: true} %></li>
<li><%= link_to fa_icon('fw tag', text: t('.tag')), tags_item_path(item, format: :js), data: {remote: true} %></li>
<% end %>
<% if can? :destroy, item %>
<li><%= link_to fa_icon('fw trash-o', text: t('.remove')), item_path(item, format: :js), data: {remote: true, method: :delete, confirm: t('.sure', name: item.name)} %></li>
<% end %>
