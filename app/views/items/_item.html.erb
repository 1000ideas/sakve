<li class="<%= cycle('odd', 'even') %> item-<%= item.id %>">
  <div class="name"><%= item.name %></div>
  <div class="size"><%= number_to_human_size item.object_file_size %></div>
  <div class="date" title="<%= l item.created_at, format: :long %>">
    <%= l item.created_at, format: :short %>
  </div>
  <div class="hidden-actions actions">
    <%= link_to t('edit'), edit_item_path(item), class: 'edit', data: {remote: true} %>
    <%= link_to t('download'), item.object.url(:original), class: 'download', data: {method: :get} %>
    <%= link_to t('destroy'), item, class: "destroy", data: { confirm: t('confirm.text'), method: :delete, remote: true } %>
  </div>
</li>
