<li class="row item <%= !item.shared_for?(current_user) ? ((current_user.admin? or !item.folder.global?) ? "draggable" : "") : "" %>" id="item-<%= item.id %>" data-context="true" data-context-ajax="<%= context_path %>">
  <div class="name columns small-7">
    <%= f.select_box :id, item %>
    <%= fa_icon 'file-o 2', text: item.name, data: {extension: item.extension} %>
  </div>
  <div class="size columns small-2 text-center"><%= number_to_human_size item.object_file_size %></div>
  <div class="date columns small-3 text-center" title="<%= l item.updated_at, format: :long %>">
    <%= l item.updated_at, format: :short %>
  </div>
  <a href="" data-context-button><%= fa_icon('ellipsis-h') %></a>
  <!--div class="actions" data-context-target="true">
    <%= link_to t('show'), item, class: 'show', data: {remote: true} if can? :read, item %>
    <%= link_to t('edit'), edit_item_path(item), class: 'edit', data: {remote: true} if can? :edit, item %>
    <%= link_to t('download'), item.object.url(:original), class: 'download', data: {method: :get} %>
    <%= link_to t('share'), share_item_path(item, format: :js), class: "share", data: { method: :put, remote: true } if can? :share, item %>
    <%= link_to t('destroy'), item, class: "destroy", data: { confirm: t('confirm.text'), method: :delete, remote: true } if can? :destroy, item %>
  </div-->
</li>
