    })(window,document,'script','dataLayer','GTM-TT7DT8V');
    </script>
    <% end %>

    <%= stylesheet_link_tag    "download" %>
    <%= javascript_include_tag "vendor/modernizr" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript>
      <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-TT7DT8V" height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->

    <div class="cover" data-cover="<%= image_path("transfer/cover-#{(1..7).to_a.shuffle.first}.jpg") %>"></div>
    <%= yield %>
    <%= javascript_include_tag "application" %>
  </body>
</html>
