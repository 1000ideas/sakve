<ul>
  <%= content_tag :li, link_to('Users', users_path) if can? :manage, User %>
  <%= content_tag :li, link_to('Groups', groups_path) if can? :read, Group %>
  <%= content_tag :li, link_to('Items',items_path) if can? :read, Item %>
  <%= content_tag :li, link_to('Transfer', transfers_path) if can? :create, Transfer %>
  <%= content_tag :li, link_to('Logout', destroy_user_session_path, method: :delete), title: current_user if current_user %>
  <% (I18n.available_locales - [I18n.locale]).each do |lang| %>
    <%= content_tag :li, link_to("Switch to #{lang}", switch_lang_path(lang: lang)) %>
  <% end %>
</ul>
