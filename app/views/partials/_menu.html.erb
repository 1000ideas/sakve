<header>
  <div class="row collpase" data-equalizer>
    <hgroup class="hide-for-small medium-4 large-2 columns" data-equalizer-watch>
      <h1>
        <%= logo_tag %>
      </h1>
    </hgroup>
    <div class="small-12 medium-8 large-10 columns" data-equalizer-watch>
      <div class="row">
        <nav class="small-8 medium-8 large-8 columns main-menu">
          <ul>
            <%= content_tag :li, link_to(t('.items'), items_path, class: cp(items_path)) if can? :read, Item %>
            <%= content_tag :li, link_to(t('.transfer'), transfers_path, class: cp(transfers_path)) if can? :create, Transfer %>
            <%= content_tag :li, link_to(t('.users'), users_path, class: cp(users_path)) if can? :manage, User %>
          </ul>
        </nav>
        <nav class="small-4 medium-4 large-4 columns text-right">
          <ul>
            <%= content_tag :li, link_to(current_user.email, edit_user_registration_path) if current_user %>
            <%= content_tag :li, link_to(t('.logout'), destroy_user_session_path, method: :delete) if current_user %>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</header>
