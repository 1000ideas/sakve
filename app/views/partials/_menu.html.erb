<header>
  <div class="row">
    <nav class="small-8 medium-8 large-8 columns main-menu">
      <ul>
        <%= content_tag :li, link_to('Items',items_path) if can? :read, Item %>
        <%= content_tag :li, link_to('Transfer', transfers_path) if can? :create, Transfer %>
        <%= content_tag :li, link_to('Groups', groups_path) if can? :manage, Group %>
      </ul>
    </nav>
    <nav class="small-4 medium-4 large-4 columns">
      <ul>
        <%= content_tag :li, link_to(current_user.email, edit_user_registration_path) if current_user %>
        <%= content_tag :li, link_to('Logout', destroy_user_session_path, method: :delete) if current_user %>
      </ul>
    </nav>
  </div>
  <div class="row search-form">
    <div class="columns small-10 small-centered medium-8 large-6">
      <%= form_for(:search, url: search_path, method: :get) do |f| %>
        <fieldset class="row collapse">
          <div class="columns small-10">
            <%= f.text_field :query %>
          </div>
          <div class="columns small-2">
            <%= f.button t('.search'), class: [:button, :postfix] %>
          </div></fieldset>
      <% end %>
    </div>
  </div>
