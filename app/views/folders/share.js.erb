if ( $('#share-folder-modal').length === 0) {
  $('<div data-reveal>')
    .addClass('reveal-modal small')
    .attr('id', 'share-folder-modal')
    .html("<%= j render('share_form') %>")
    .appendTo('body')
    .foundation()
    .on('closed', function() { $(this).remove(); })
    .foundation('reveal', 'open')
    .find('#search_collaborator')
    .autocomplete(sakve.defaults.collaborators_autocomplete)
    .data('ui-autocomplete')._renderItem = sakve.views.collaborator_select;
}
