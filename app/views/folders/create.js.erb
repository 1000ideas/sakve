<% if @folder.errors.any? %>
sakve.show_errors('#new-folder-modal',
  "<%= j render('l/partials/errors', errors: @folder.errors) %>");
<% else %>
sakve.reload_list('items');
sakve.reload_list('folders');

$('#new-folder-modal').foundation('reveal', 'close');
$('#new-folder-modal form').each(function() { this.reset(); });
$('#new-folder-modal [data-alert]').remove();
<% end %>
